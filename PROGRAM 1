#include<stdio.h>
#include<stdlib.h>
#include<sys/types.h>
#include<unistd.h>
int main(void)
{
	pid_t pid=fork();
	if(pid==0)
	{
		printf("Child = PPID: %d PID: %d\n",getppid());
		exit(EXIT_SUCCESS);
	}
	else if(pid>0)
	{
		printf("Parent = PID: %d\n",getpid());
		printf("Waiting for child process to finish.\n");
		wait(NULL);
		printf("Child process finished.\n");
	}
}




OUTPUT:

/tmp/r9gXXIyOtX.o
Parent = PID: 19600
Waiting for child process to finish.
Child = PPID: 19600 PID: 0
Child process finished.
